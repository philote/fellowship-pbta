<div class='cell cell--f-item cell--bonds cell--group'>
  <h2 class='cell__title'>
    <label class='item-group-label'>{{localize "FELLOWSHIP.CharacterSheets.bonds.label"}}</label>
    <div class='item-controls'>
      <button
        type='button'
        class='item-control item-create'
        data-type='fellowship-pbta.bond'
        data-bond-type='bond'
      >
        <i class='fas fa-plus'></i>
      </button>
    </div>
  </h2>
  
  <ol class='items-list'>
    {{log actor.bonds}}
    {{#each actor.bonds}}
      <li class='item flexcol' draggable="true" data-item-id='{{this._id}}'>
        <div class='flexrow'>
          <h2 class='item-name'>{{this.name}}</h2>
          
          <div class='item-controls'>
            <a class='item-control item-edit' title='Edit Item'><i class='fas fa-edit'></i></a>
            <a class='item-control item-delete' title='Delete Item'><i class='fas fa-trash'></i></a>
          </div>
        </div>
        <div class="bonds-list item-group">
        {{#each this.system.bonds as |bond|}}
					<div class="bond flexrow">
            <input 
							type="checkbox" 
							class="bond-checkbox" 
              data-action='bond'
              data-key={{@key}}
              data-value={{bond.used}}
							{{checked bond.used}}/>
            <p
            {{#if bond.used}}class='bond-used'{{/if}}
            >{{bond.connection}}</p>
					</div>
				{{/each}}
			</div>
      </li>
    {{/each}}
  </ol>
</div>
